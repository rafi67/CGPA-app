<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
        android:id="@+id/ed1"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter your 1st semester point"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/ed2"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ed1"
        android:layout_centerHorizontal="true"
        android:hint="Enter your 2nd semester point"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/ed3"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ed2"
        android:layout_centerHorizontal="true"
        android:hint="Enter your 3rd semester point"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/ed4"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ed3"
        android:layout_centerHorizontal="true"
        android:hint="Enter your 4th semester point"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/ed5"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ed4"
        android:layout_centerHorizontal="true"
        android:hint="Enter your 5th semester point"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/ed6"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ed5"
        android:layout_centerHorizontal="true"
        android:hint="Enter your 6th semester point"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/ed7"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ed6"
        android:layout_centerHorizontal="true"
        android:hint="Enter your 7th semester point"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/ed8"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ed7"
        android:layout_centerHorizontal="true"
        android:hint="Enter your 8th semester point"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="177dp"
        android:layout_height="44dp"
        android:layout_below="@+id/ed8"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="117dp"
        android:text="Calculate" /></RelativeLayout>


</ScrollView>