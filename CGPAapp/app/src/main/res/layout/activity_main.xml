<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:id="@+id/ed1"
        android:hint="Enter your 1st semester point"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:id="@+id/ed2"
        android:hint="Enter your 2nd semester point"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/ed1"/>

    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:id="@+id/ed3"
        android:hint="Enter your 3rd semester point"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/ed2"/>

    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:id="@+id/ed4"
        android:hint="Enter your 4th semester point"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/ed3"/>


    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:id="@+id/ed5"
        android:hint="Enter your 5th semester point"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/ed4"/>


    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:id="@+id/ed6"
        android:hint="Enter your 6th semester point"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/ed5"/>



    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:id="@+id/ed7"
        android:hint="Enter your 7th semester point"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/ed6"/>

    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:id="@+id/ed8"
        android:hint="Enter your 8th semester point"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/ed7"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/btn1"
        android:layout_below="@+id/ed8"
        android:layout_centerHorizontal="true"
        android:text="Calculate"/>
    <TextView
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:id="@+id/tv1"
        android:background="@color/color"
        android:text="CGPA"
        android:layout_below="@+id/btn1"
        android:layout_marginLeft="20dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_marginTop="25dp"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/btn2"
        android:layout_below="@+id/btn1"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="25dp"
        android:text="reset"/>





</RelativeLayout>