<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:id="@+id/ed1"
        android:hint="Enter your 1st semester point"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:id="@+id/ed2"
        android:hint="Enter your 2nd semester point"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/ed1"/>

    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:id="@+id/ed3"
        android:hint="Enter your 3rd semester point"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/ed2"/>

    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:id="@+id/ed4"
        android:hint="Enter your 4th semester point"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/ed3"/>


    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:id="@+id/ed5"
        android:hint="Enter your 5th semester point"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/ed4"/>


    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:id="@+id/ed6"
        android:hint="Enter your 6th semester point"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/ed5"/>



    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:id="@+id/ed7"
        android:hint="Enter your 7th semester point"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/ed6"/>

    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:id="@+id/ed8"
        android:hint="Enter your 8th semester point"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/ed7"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="177dp"
        android:layout_height="44dp"
        android:layout_below="@+id/ed8"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="117dp"
        android:text="Calculate" />


</RelativeLayout>